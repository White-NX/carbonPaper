{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "carbonpaper",
  "version": "0.4.5",
  "identifier": "com.eyling.carbonpaper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "carbonpaper",
        "width": 1300,
        "height": 750,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "pre-bundle": "."
    },
    "windows": {
      "nsis": {
        "installerHooks": "nsis_hooks.nsh"
      }
    }
  }
}
